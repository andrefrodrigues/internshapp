<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="EndereÃ§o de email"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_input"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_button"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palavra-passe"
        android:id="@+id/textView2"
        android:layout_below="@+id/email_input"
        android:layout_alignParentStart="true"/>

    <EditText android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/password_input"
    android:layout_below="@+id/textView2"
    android:layout_alignParentStart="true"
    android:layout_alignEnd="@+id/email_input"/>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="REGISTAR"
        android:background="#0033CC"
        android:textColor="#FFFFFF"
        android:id="@+id/register_button"
        android:layout_below="@+id/password_input"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/password_input"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OU"
        android:layout_margin="20dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/register_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:background="#019439"
        android:textColor="#FFFFFF"
        android:id="@+id/login_button"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>